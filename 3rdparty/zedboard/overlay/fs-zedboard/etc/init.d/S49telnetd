#!/bin/sh
#
# Start the telnetd....
#

PATH=/sbin:/bin:/usr/sbin:/usr/bin

case "$1" in
  start)
        printf "Starting telnetd: "
        pid=$(pidof telnetd)
        if [ $pid ]
        then
            echo "telnetd already started"
            exit 0
        fi 
        /usr/sbin/telnetd
        ;;
  stop)
        printf "Stopping telnetd: "
        killall telnetd > /dev/null 2>&1
        ;;
  restart|reload)
        "$0" stop
        "$0" start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
