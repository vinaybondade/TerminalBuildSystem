#!/bin/sh
#
# Start the Prepare BLE....
#


case "$1" in
  start)
        printf "Prepare BLE..."
        echo 959 > /sys/class/gpio/export
        echo out > /sys/class/gpio/gpio959/direction
        echo 0 > /sys/class/gpio/gpio959/value
        echo 1 > /sys/class/gpio/gpio959/value
        [ $? = 0 ] && echo "OK" || echo "FAIL"
        ;;
  stop)
        printf "Stopping BLE: "
        [ $? = 0 ] && echo "OK" || echo "FAIL"
        ;;
  restart|reload)
        "$0" stop
        "$0" start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
