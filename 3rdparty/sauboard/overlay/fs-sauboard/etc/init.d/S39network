#!/bin/sh
#
# Start the network....
#
# Debian ifupdown needs the /run/network lock directory

case "$1" in
  start)
	macaddr=$(strings /dev/mtd0 | sed -n '/macaddr/{s/.*<macaddr>//;s/<\/macaddr.*//;p;}') 
	if [  $macaddr ]
	then
	ifconfig eth0 hw ether $macaddr
	fi 
        ;;
  stop)
        printf "Use Kill Application with pid"
        ;;
  restart|reload)
        "$0" stop
        "$0" start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
